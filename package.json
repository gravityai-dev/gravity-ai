{
  "name": "@gravityai-dev/gravity-ai",
  "version": "0.2.35",
  "description": "Unified library for Gravity AI - Real-time AI messaging for React and Node.js",
  "private": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch --force",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "codegen": "graphql-codegen --config codegen.yml",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "streaming",
    "react",
    "graphql",
    "redis",
    "real-time",
    "chat"
  ],
  "author": "Gravity AI Team",
  "license": "MIT",
  "dependencies": {
    "@apollo/client": "^3.8.0",
    "@graphql-yoga/apollo-link": "^4.0.0",
    "@gravityai-dev/gravity-server": "^0.2.35",
    "graphql": "^16.8.0",
    "graphql-ws": "^5.14.0",
    "howler": "^2.2.4",
    "ioredis": "^5.3.0",
    "markdown-to-jsx": "^7.7.6",
    "uuid": "^9.0.0",
    "zustand": "^4.4.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.0",
    "@graphql-codegen/typescript-operations": "^4.0.0",
    "@graphql-codegen/typescript-react-apollo": "^4.0.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@types/howler": "^2.2.12",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "tsup": "^7.2.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gravityai-dev/gravity-ai.git"
  },
  "bugs": {
    "url": "https://github.com/gravityai-dev/gravity-ai/issues"
  },
  "homepage": "https://github.com/gravityai-dev/gravity-ai#readme"
}
